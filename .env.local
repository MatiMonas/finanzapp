# ===========================================
# LOCAL DEVELOPMENT CONFIGURATION
# ===========================================

# MySQL database connection URL for LOCAL environment
DATABASE_URL="mysql://user:password@localhost:3306/finanzapp-local"

# Execution environment
NODE_ENV="local"

# Port where the application will run
PORT=3000

# Secret key for JWT
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Enable detailed logs in development
DEBUG=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT token expiration time (in seconds)
JWT_EXPIRES_IN=3600

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed origins for CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ===========================================
# SWAGGER CONFIGURATION
# ===========================================

# Base URL for API documentation
SWAGGER_BASE_URL=http://localhost:3000
